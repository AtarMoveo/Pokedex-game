{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "typeRoots": [
      "./src/data/types", 
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "server.ts",
  ],
  "exclude": [
    "node_modules"      
  ]
}